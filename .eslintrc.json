{
  "extends": [
    "airbnb-base",
    "prettier"
  ],
  "env": {
     "es6": true,
     "browser": true,
     "jest": true
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js", ".jsx", ".ts", ".tsx"]
      }
    }
  },
  "rules": {
    "no-restricted-syntax": [
      "error",
      "LabeledStatement",
      "WithStatement"
    ],
    "class-methods-use-this": "off"
  }
}
